 
<div class="box">
	<div class="input">
		<input type="text" name="name" id="name" value="PETRO" placeholder="Escribe tu nombre"> 
    <input type="button" value="ok" onclick="convertir()">
	</div>
	<div class="design" id="design">
		<div class="render">
		 
		</div>
		<img class='ph' src='ph.png'>	
	</div>
	
	<input type="button" value="descargar" onclick="downloadimage()">
</div>	
 

<style type="text/css">
	.box{
		    margin: 0 auto;
		    width: fit-content;
		    /* margin-left: 44px; */
		    text-align: center;
	}
	.design {
